.pure-u-1-3
.pure-u-1-3
  #clearance.password-reset
    %h2= t(".title")
    %p= t(".description")
    = form_for :password_reset,                                        |
      url: user_password_path(@user, token: @user.confirmation_token), |
      html: { method: :put, class: 'pure-form pure-form-stacked' } do |form|                                 |
      .password-field
        = form.label :password
        = form.password_field :password
      .submit-field
        = form.submit class: 'pure-button button-secondary'
