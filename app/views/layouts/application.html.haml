!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SquareHijacker
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body{ class: "#{controller_name} #{action_name}", data: { controller: controller_name, action: action_name } }
    %header.pure-menu.pure-menu-horizontal.border-bottom.padding20
      = link_to 'SquareHijacker', root_path, class: 'pure-menu-heading pure-menu-link'
      %ul.pure-menu-list.float-right
        - if signed_in?
          %li.pure-menu-item
            = link_to t(".sign_out"), sign_out_path, method: :delete, class: 'pure-menu-link'
    #flash
      - flash.each do |key, value|
        %div{ id: "flash_#{key}"}
          %p=h value
    .main-body.pure-g
      = yield
    %footer.margin-top-10
      .pure-g
        .pure-u-1-3
        .pure-u-1-3
          .pure-menu.pure-menu-horizontal
            %ul.pure-menu-list
              %li.pure-menu-item
                %a{ href: 'http://www.github.com/saadbinakhlaq', target: '_blank' } @github
              %li.pure-menu-item
                %a{ href: 'http://saadbinakhlaq.com', target: '_blank' } Saad Bin Akhlaq
              %li.pure-menu-item
                %a{ href: 'http://www.twitter.com/Saad_bin_Akhlaq', target: '_blank' } @twitter
